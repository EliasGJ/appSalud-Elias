<%- include('partials/head') %>

<div class="container my-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="m-0">Historial de lecturas</h3>
    <a href="/paciente/<%= paciente.id %>" class="btn btn-secondary btn-sm">Volver</a>
  </div>

  <div class="row g-4">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-header">Báscula - Registros</div>
        <div class="card-body p-0">
          <% if (basculas && basculas.length) { %>
            <div class="table-responsive">
              <table class="table table-sm mb-0">
                <thead class="table-light">
                  <tr>
                    <th>Fecha</th>
                    <th>Peso (kg)</th>
                    <th>Altura (m)</th>
                    <th>IMC</th>
                  </tr>
                </thead>
                <tbody>
                  <% basculas.forEach(function(b) { %>
                    <tr>
                      <td><%= new Date(b.fecha).toLocaleString() %></td>
                      <td><%= b.peso %></td>
                      <td><%= b.altura %></td>
                      <td><%= b.imc %></td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          <% } else { %>
            <div class="p-3">No hay registros de báscula.</div>
          <% } %>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-header">Termómetro - Registros</div>
        <div class="card-body p-0">
          <% if (termometros && termometros.length) { %>
            <div class="table-responsive">
              <table class="table table-sm mb-0">
                <thead class="table-light">
                  <tr>
                    <th>Fecha</th>
                    <th>Temperatura (°C)</th>
                    <th>Temperatura (°F)</th>
                  </tr>
                </thead>
                <tbody>
                  <% termometros.forEach(function(t) { %>
                    <tr>
                      <td><%= new Date(t.fecha).toLocaleString() %></td>
                      <td><%= t.temperaturaC %></td>
                      <td><%= ((t.temperaturaC * 9/5) + 32).toFixed(2) %></td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          <% } else { %>
            <div class="p-3">No hay registros de temperatura.</div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
