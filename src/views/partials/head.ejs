<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title%>
    </title>
    <!-- Important CSS desde public -->
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <!-- Custom styles -->
    <link rel="stylesheet" href="/css/custom.css">
</head>

<body>
        <header class="py-2">
                <div class="container d-flex justify-content-between align-items-center">
                        <div>
                                <span class="fw-bold">AppSalud</span>
                        </div>
                        <div class="header-datetime text-muted small" id="header-datetime" aria-live="polite">&nbsp;</div>
                </div>
        </header>
        <script>
            (function(){
                function updateMadridTime(){
                    try{
                        const now = new Date();
                        const opts = { year: 'numeric', month: 'short', day: '2-digit', hour: '2-digit', minute: '2-digit', second: '2-digit', timeZone: 'Europe/Madrid', hour12: false };
                        const formatter = new Intl.DateTimeFormat('es-ES', opts);
                        document.getElementById('header-datetime').textContent = formatter.format(now) + ' (Espa√±a)';
                    }catch(e){
                        // fallback
                        document.getElementById('header-datetime').textContent = new Date().toLocaleString();
                    }
                }
                updateMadridTime();
                setInterval(updateMadridTime, 1000);
            })();
        </script>